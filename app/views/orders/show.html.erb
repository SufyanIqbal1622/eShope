
<h2>Order show</h2>
<ul>
  <% @order.order_items.each do |order_item| %>
    <li>Order: <%= order_item.product.name %>/ Price: <%= number_to_currency(order_item.product.price) %>/ Quantity: <%= order_item.quantity %>/ Total Price: <%= number_to_currency(order_item.total_price) %>
    <ul>
      <li>
        <%= link_to "Add one", order_item_add_path(:id => order_item), method: :post %>
        <%= link_to "Reduce one", order_item_reduce_path(:id => order_item), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", order_item_path(order_item), method: :delete %>
      </li>
    </ul>
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@order.sub_total) %></h3>
<%= link_to "Proceed to checkout", new_cart_path %><br>
