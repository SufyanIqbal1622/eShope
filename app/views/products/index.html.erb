
<div class = ".container-fluid ">
     <ul class="list-inline">
        <% @products.each do |product| %>
        <li class="list-inline-item" >
          <% if product.image.attached? %>
            <%= image_tag product.image, style: "width:200px; disply:block" %>
            <br>
            <%= button_to "Add #{product.name} to Cart", order_items_path(:product_id => product.id), method: :post %>
          <%end %>
        </li>
      <% end %>
      </ul>
</div>

