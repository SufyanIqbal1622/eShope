<p id="notice"><%= notice %></p>
<div class="container">
<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<% if @product.image.attached? %>
<div class="col-md-4 col-sm-6">
 <%= image_tag @product.image, class:"img-fluid" %>
  </div>
  <span class="text-info"> <%= number_to_currency(@product.price) %></span>
<span class= "btn-group btn-group-sm"> <%= button_to "+", order_items_path(:product_id => @product.id), method: :post , class:"btn btn-outline-warning"%>

<% end %>
<br>
<%= link_to 'Back', products_path, class:"btn btn-outline-info" %>


</div>

